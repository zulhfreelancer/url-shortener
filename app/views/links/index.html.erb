<h3>Your Links</h3>
<div class="row">
  <div class="col-md-12">

    <% if user_signed_in? %>
      <%= link_to 'Add New Link', new_link_path, class: "btn btn-primary" %>
    <% end %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Original URL</th>
          <th>Title</th>
          <th>Shortened URL</th>
          <% if user_signed_in? %>
            <th style="text-align: center;">Action</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @links.each do |link| %>
          <tr>
            <td><%= link.url %></td>
            <td>
              <% if link.title.present? %>
                <%= link.title %>
              <% else %>
                <span>-</span>
              <% end %>
            </td>
            <td><%= link_to "Open URL", request.base_url + "/" + link.slug, target: "_blank", class: "btn btn-success" %></td>
            <% if user_signed_in? %>
              <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @links, renderer: BootstrapPagination::Rails %>

  </div> <!-- /col-md-12 -->
</div> <!-- /row -->