<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :url, "URL" %><br>
    <%= f.url_field :url, class: "form-control", placeholder: "Eg: http://google.com" %>
    <p class="help-block">Make sure you enter a valid URL with <i>http://</i> or <i>https://</i></p>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" do %>
      Shorten URL
    <% end %>
    <%= link_to 'Back', root_path, class: "btn btn-default" %>
  </div>
<% end %>
